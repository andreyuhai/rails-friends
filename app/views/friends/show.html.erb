<div class="bg-light p-5 rounded-lg mt-3">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>

  <p>
  <strong>Email:</strong>
  <%= @friend.email %>
  </p>

  <p>
  <strong>Phone:</strong>
  <%= @friend.phone %>
  </p>

  <p>
  <strong>Twitter:</strong>
  <%= @friend.twitter %>
  </p>

  <%= link_to 'Edit', edit_friend_path(@friend), class: 'btn btn-outline-primary' %>
  <%= link_to 'Back', friends_path, class: 'btn btn-outline-primary' %>
  <%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'You sure bruh?' }, class: 'btn btn-outline-danger' %>
</div>
